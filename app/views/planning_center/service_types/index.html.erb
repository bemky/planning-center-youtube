<div class="container mt-4">
  <h1>Planning Center Service Types</h1>
  
  <% if @service_types.any? %>
    <div class="row mt-4">
      <% @service_types.each do |service_type| %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= service_type.name %></h5>
              <p class="card-text text-muted">
                <small>Frequency: <%= service_type.frequency.presence || 'Not specified' %></small>
              </p>
              <% if service_type.last_plan_from.present? %>
                <p class="card-text">
                  Last Plan: <%= service_type.last_plan_from %>
                </p>
              <% end %>
              <%= link_to "View Plans", planning_center_service_type_path(service_type.id), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">
      <p>No service types found. Make sure your Planning Center API credentials are correct.</p>
    </div>
  <% end %>
  
  <div class="mt-3">
    <%= link_to "Back to Home", root_path, class: "btn btn-secondary" %>
  </div>
</div>