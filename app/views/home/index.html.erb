<div class="container mt-5">
  <div class="text-center">
    <h1>PlanningDistro</h1>
    <p class="lead">Manage your YouTube live videos with Planning Center integration</p>
    
    <% if user_signed_in? %>
      <div class="mt-4">
        <h2>Welcome, <%= current_user.name %>!</h2>
        <p>You are signed in with <%= current_user.email %></p>
        <div class="d-flex justify-content-center gap-3">
          <%= link_to "My YouTube Channels", channels_path, class: "btn btn-primary" %>
          <%= link_to "Planning Center Services", planning_center_service_types_path, class: "btn btn-success" %>
          <%= link_to "Sign Out", signout_path, class: "btn btn-outline-danger" %>
        </div>
      </div>
    <% else %>
      <div class="mt-4">
        <%= link_to "Sign in with Google", signin_path, class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>